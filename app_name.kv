#: kivy 2.1.0
## ------------------------------------------------------------------
## - Font settings in general. All used fonts to be defined here    -
## ------------------------------------------------------------------
#:set fn_title "./fonts/Ubuntu-B.ttf"
#:set fs_title 20

#:set fn_subtitle "./fonts/Ubuntu-B.ttf"
#:set fs_subtitle 16

#:set fn_subsubtitle "./fonts/Ubuntu-B.ttf"
#:set fs_subsubtitle 14

#:set fn_button "./fonts/Ubuntu-BI.ttf"
#:set fs_button 14

#:set fn_text "./fonts/Ubuntu-C.ttf"
#:set fs_text 12

#:set fn_data "./fonts/Ubuntu-LI.ttf"
#:set fs_data 12

## ------------------------------------------------------------------
## - Filelinks to be used globally:                                 -
## ------------------------------------------------------------------

#:set default_image1 "./images/MinimalArt-CitySTRWP.jpg"
#:set default_image2 "./images/RenderArt-PaperWallSTRWP.jpg"
#:set default_image3 "./images/RenderArt-TunelSTRWP.jpg"
#:set background_image "./images/RenderArt-StoneWallSTRWP.jpg"
#:set defaultQR "./qrcodes/_QR_default.png"
#:set phimage_link "./icons/caution.png"

## ----------------------------------------------------------------------------------------------
## transitions imported for screenchanges:
## ----------------------------------------------------------------------------------------------
#:import NoTransition kivy.uix.screenmanager.NoTransition
## -----------------------------------------------------------------------------
#:import CardTransition kivy.uix.screenmanager.CardTransition
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import SwapTransition kivy.uix.screenmanager.SwapTransition
#:import WipeTransition kivy.uix.screenmanager.WipeTransition

## ----------------------------------------------------------------------------------------------
## Root Widget definition: ScreenManager                            ScreenManager       START   -
## ----------------------------------------------------------------------------------------------
AppObjScreenManager:
    id: ThisIsYourROOTWidget
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: background_image
    ScreenA:
        id: screen_a
    ScreenB:
        id: screen_b
    ScreenC:
        id: screen_c
    ScreenD:
        id: screen_d


<AppObjScreenManager@ScreenManager>:
    ## transition: NoTransition()
    transition: CardTransition(direction="right", duration=0.05)
    ## transition: FadeTransition(duration=0.1)
    ## transition: FallOutTransition(duration=0.05)    # opposites v
    ## transition: RiseInTransition(duration=0.08)     # opposites ^
    ## transition: SlideTransition()
    ## transition: SwapTransition(duration=.5)
    ## transition: WipeTransition()

## ----------------------------------------------------------------------------------------------
## Root Widget definition: ScreenManager                            ScreenManager       ENDED   -
## ----------------------------------------------------------------------------------------------

<ScreenA@Screen>:
    name: "screen_A"
    InScreenWindow:
        TitleLine:
            id: screen_A_titleline
            size_hint: 1, 0.1                   ##  0.1
            display_title: "Screen A"
        NavBar:
            id: navbar
            size_hint: 1, 0.1                   ##  0.1     < 0.20
        OpAreaA:
            size_hint: 1, 0.75                  ##  0.75    < 0.95
            id: opareaA
        Ribbon:
            id: ribbon_A
            size_hint: 1, 0.05                  ##  0.05    < 1
            text_ribbon: "by Sziller"
            image_source: phimage_link

<ScreenB@Screen>:
    name: "screen_B"
    InScreenWindow:
        TitleLine:
            id: screen_B_titleline
            size_hint: 1, 0.1                      ##  0.1
            display_title: "Screen B"
        NavBar:
            id: navbar
            size_hint: 1, 0.1                      ##  0.1      < 0.20
        OpAreaB:
            size_hint: 1, 0.75                     ##  0.75     < 0.95
            id: opareaB
        Ribbon:
            id: ribbon_B
            size_hint: 1, 0.05
            text_ribbon: "by Sziller"
            image_source: phimage_link

<ScreenC@Screen>:
    name: "screen_C"
    InScreenWindow:
        TitleLine:
            id: screen_C_titleline
            size_hint: 1, 0.1                      ##  0.1
            display_title: "Screen C"
        NavBar:
            id: navbar
            size_hint: 1, 0.1                      ##  0.1      < 0.20
        OpAreaC:
            size_hint: 1, 0.75                     ##  0.75     < 0.95
            id: opareaC
        Ribbon:
            id: ribbon_C
            size_hint: 1, 0.05
            text_ribbon: "by Sziller"
            image_source: phimage_link

<ScreenD@Screen>:
    name: "screen_D"
    InScreenWindow:
        TitleLine:
            id: screen_D_titleline
            size_hint: 1, 0.1                      ##  0.1
            display_title: "Screen D"
        NavBar:
            id: navbar
            size_hint: 1, 0.1                      ##  0.1      < 0.20
        OpAreaD:
            size_hint: 1, 0.75                     ##  0.75     < 0.95
            id: opareaD
        Ribbon:
            id: ribbon_D
            size_hint: 1, 0.05
            text_ribbon: "by Sziller"
            image_source: phimage_link


<InScreenWindow@BoxLayout>:
    orientation: "vertical"

<OperationAreaBox@BoxLayout>:
    orientation: "vertical"

<TitleLine@BoxLayout>:
    display_title: "default"
    orientation: "horizontal"
    ScreenTitleLabel:
        font_name: fn_title
        font_size: fs_title
        text: root.display_title

<OpAreaA@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        LabelInfo:
            id: labelinfo
            size_hint: 1, 0.15
            text: "Sometext..."

<OpAreaB@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "horizontal"
            AsyncImage:
                id: qr_plot_layout
                size_hint: 1, 1
                source: default_image1

<OpAreaC@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "horizontal"
            AsyncImage:
                id: qr_plot_layout
                size_hint: 1, 1
                source: default_image2

<OpAreaD@OperationAreaBox>:
    BoxLayout:
        padding: 20
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "horizontal"
            AsyncImage:
                id: qr_plot_layout
                size_hint: 1, 1
                source: default_image3

<NavBar@BoxLayout>:
    id: navbar
    orientation: "horizontal"
    size_hint: 1, 0.05
    ButtonScreenNav:
        id: button_nav_A
        target: "screen_A"
        disabled: True
        text: "screen_A"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_B
        target: "screen_B"
        text: "screen_B"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_C
        target: "screen_C"
        text: "screen_C"
        on_release: root.on_release_navbar(self)
    ButtonScreenNav:
        id: button_nav_D
        target: "screen_D"
        text: "screen_D"
        on_release: root.on_release_navbar(self)

<Ribbon@BoxLayout>:
    text_ribbon: "by Sziller"
    image_source: None
    orientation: "horizontal"
    LabelRibbon:
        text: root.text_ribbon
    AsyncImage:
        keep_ratio: True
        allow_stretch: False
        size_hint: 0.05, 1
        source: root.image_source

#   ---------------------------------------------------------------------
#   - Label:                                                    START   -
#   ---------------------------------------------------------------------

<ScreenTitleLabel@Label>:
    font_size: fs_title
    font_name: fn_title

<LabelInfo@Label>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0, 1
    font_size: fs_subsubtitle
    font_name: fn_subsubtitle
    text_size: self.size
    halign: 'center'  ## center, right, left
    valign: 'center'  ## middle, top, bottom

<LabelRibbon@Label>:
    halign: 'right'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom
    font_name: fn_button
    font_size: fs_button
    size_hint: 0.95, 1
    text_size: self.size
    padding: (10, 0)

<LabelPH@Label>:

#   ---------------------------------------------------------------------
#   - Label:                                                    ENDED   -
#   ---------------------------------------------------------------------


#   ---------------------------------------------------------------------
#   - TextInput:                                                START   -
#   ---------------------------------------------------------------------

<TextInParagraph@TextInput>:
    font_name: fn_data
    font_size: fs_data
    text_size: self.size
    line_height: 40
    focus: True
    hint_text: "enter project name"
    padding: (2, 2)
    foreground_color: (1,1,1,1)
    background_color: (1,1,1,0.2)
    cursor_color: (1,1,1,1)
    halign: 'left'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom

#   ---------------------------------------------------------------------
#   - TextInput:                                                ENDED   -
#   ---------------------------------------------------------------------

#   ---------------------------------------------------------------------
#   - Button:                                                   START   -
#   ---------------------------------------------------------------------

<ButtonScreenNav@Button>:
    font_name: fn_button
    font_size: fs_button
    background_color: 0.3, 0.4, 0.3, 0.45
    target: ""
    text_size: self.size
    color: (1, 1, 1)
    padding: (2, 2)
    text: "ToggleButton"
    halign: 'center'  ## center, right, left
    valign: 'middle'  ## middle, top, bottom

#   ---------------------------------------------------------------------
#   - Button:                                                   ENDED   -
#   ---------------------------------------------------------------------